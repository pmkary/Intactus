    other-modules:
        Infrastructure.Text.Layout
        Infrastructure.Text.Shapes.Boxes
        Infrastructure.Text.Shapes.Brackets
        Infrastructure.Text.Shapes.Presets
        Infrastructure.Text.Shapes.Types
        Infrastructure.Text.Tools
        Language.FrontEnd.Parser
        Language.FrontEnd.Types
        Language.Renderer.Main
        Language.Renderer.Nodes.Assignment
        Language.Renderer.Nodes.BinaryOperator
        Language.Renderer.Nodes.FunctionCall
        Language.Renderer.Nodes.Identifier
        Language.Renderer.Nodes.Number
        Language.Renderer.Nodes.Parenthesis
        Language.Renderer.Nodes.Versus
        Model
        REPL.Main
        REPL.Runner
        REPL.Terminal